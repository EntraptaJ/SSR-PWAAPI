{
  "name": "ssr-pwaapi",
  "version": "0.0.0",
  "description": "SSRPWA-API Template",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon",
    "dev:debug": "nodemon",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.kristianjones.xyz/KFJ-Lab/docs.kristianjones.xyz"
  },
  "author": "Kristian Jones <me@kristianjones.xyz>",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/klaw": "^3.0.0",
    "@types/mongoose": "^5.5.6",
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "@nakanokurenai/mongoose-auto-increment": "^5.0.2",
    "@types/graphql": "^14.2.2",
    "altair-koa-middleware": "^2.2.0",
    "apollo-server-koa": "^2.6.7",
    "bcrypt": "^3.0.6",
    "fs-extra": "^8.1.0",
    "graphql": "^14.4.2",
    "klaw": "^3.0.0",
    "koa": "^2.7.0",
    "koa-jwt": "^3.5.1",
    "mongoose": "^5.6.2",
    "mongoose-autopopulate": "^0.9.1",
    "p-event": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.4",
    "typegoose": "^5.6.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "tsconfigRootDir": "./services/API"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/standard",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "args": "none"
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": true,
          "jsxSingleQuote": true,
          "printWidth": 128,
          "trailingComma": "none"
        }
      ]
    }
  }
}
