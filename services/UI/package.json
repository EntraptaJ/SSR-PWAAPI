{
  "name": "ssr-pwaapi-ui",
  "version": "0.0.0",
  "description": "SSR-PWAAPI Template UI",
  "main": "dist/server",
  "scripts": {
    "build": "ts-node --project bin/tsconfig.json bin/build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "node --inspect=1235 -r ts-node/register bin/watch"
  },
  "browserslist": [
    "last 1 Chrome version"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/react-hooks": "0.1.0-beta.10",
    "@babel/plugin-proposal-dynamic-import": "^7.5.0",
    "@babel/plugin-transform-modules-commonjs": "^7.5.0",
    "@babel/preset-env": "^7.5.5",
    "@hot-loader/react-dom": "^16.8.6",
    "@jesstelford/react-portal-universal": "^1.0.6",
    "@material-ui/core": "^4.2.1",
    "@material-ui/icons": "^4.2.1",
    "@reach/router": "^1.2.1",
    "@types/graphql": "^14.2.3",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-client": "^2.6.3",
    "apollo-link-http": "^1.5.15",
    "apollo-utilities": "^1.3.2",
    "fs-extra": "^8.1.0",
    "isomorphic-unfetch": "^3.0.0",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "react": "^16.8.6",
    "react-cookie": "^4.0.1",
    "react-dom": "^16.8.6",
    "react-loadable": "^5.5.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "typescript": "^3.5.3",
    "universal-cookie-koa": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@types/fs-extra": "^8.0.0",
    "@types/koa": "^2.0.49",
    "@types/koa-router": "^7.0.42",
    "@types/koa-static": "^4.0.1",
    "@types/node": "^12.6.8",
    "@types/parcel-bundler": "^1.12.0",
    "@types/reach__router": "^1.2.4",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "@types/react-loadable": "^5.5.1",
    "@types/react-router-dom": "^4.3.4",
    "@types/universal-cookie": "^2.2.0",
    "@types/workbox-sw": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "eslint-plugin-standard": "^4.0.0",
    "graphql": "^14.4.2",
    "graphql-tag": "^2.10.1",
    "parcel-bundler": "^1.12.3",
    "parcel-plugin-assets-list": "^1.7.1",
    "parcel-plugin-bundle-manifest": "^0.2.0",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "tsconfigRootDir": "./services/UI/"
    },
    "env": {
      "browser": true
    },
    "plugins": [
      "@typescript-eslint",
      "react-hooks",
      "prettier"
    ],
    "settings": {
      "import/extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx"
      ]
    },
    "extends": [
      "standard",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/standard",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "react-hooks/rules-of-hooks": "error",
      "@typescript-eslint/explicit-member-accessibility": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": true,
          "jsxSingleQuote": true,
          "printWidth": 128,
          "trailingComma": "none"
        }
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true,
          "allowTypedFunctionExpressions": true
        }
      ]
    }
  }
}
